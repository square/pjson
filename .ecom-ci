version: "1.0"
ci:
  name: "pjson"
  type: "library"
  jobs:

  - name: tests-8.0
    type: test
    containers:
    - image: php
      tag: "8.0"
    tasks:
    - name: php-lint
      container: php
      sh: |
        composer2 install --no-interaction
        make ci-php80

  - name: tests-8.1
    type: test
    containers:
    - image: php
      tag: "8.1"
    tasks:
    - name: php-lint
      container: php
      sh: |
        composer2 install --no-interaction
        make ci-php81
